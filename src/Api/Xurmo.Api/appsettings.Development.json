{
  "ConnectionStrings": {
    "Database": "Host=xurmo.database;Port=5432;Database=xurmo;Username=postgres;Password=postgres;Include Error Detail=true",
    "Cache": "xurmo.redis:6379"
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.Seq"
    ],
    "MinimumLevel": {
      "Default": "Information"
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "Seq",
        "Args": { "serverUrl": "http://xurmo.seq:5341" }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "Xurmo.Api"
    }
  }
}
